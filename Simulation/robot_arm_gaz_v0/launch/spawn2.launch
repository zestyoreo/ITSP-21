<!-- code for spawning arm2.xacro, the complete arm robots file-->
<?xml version="1.0" encoding="UTF-8"?>
<launch>
      <group ns="/arm">
            <!-- Robot model -->
            <param name="robot_description" command="$(find xacro)/xacro --inorder '$(find robot_arm)/urdf/arm2.xacro'" />
            <arg name="x" default="0"/>
            <arg name="y" default="0"/>
            <arg name="z" default="0.5"/>
            
            <!-- Spawn the robot model -->
            <node name="mybot_spawn" pkg="gazebo_ros" type="spawn_model" output="screen"
                  args="-urdf -param robot_description -model mrm -x $(arg x) -y $(arg y) -z $(arg z)" />
      
            <!-- Load Controllers -->
            <rosparam command="load" file="$(find robot_arm)/config/joints.yaml" />

            <!-- Controllers -->
            <node name="controller_spawner" pkg="controller_manager" type="spawner"
            respawn="false" output="screen" ns="/mrm"
            args="--namespace=/mrm
            joint_state_controller
            joint1_position_controller
            --timeout 60">
            </node>
      </group>            
</launch>	