<!--arm3_trans.xacro :- has inertia, collision properties for links and transmission to control joints of of partial part robot in gazebo-->
<!--transmission trial 1-->
<?xml version="1.0" ?>
<robot name="arm" xmlns:xacro="http://www.ros.org/wiki/xacro">

<material name="blue">
        <color rgba="0 0 1 1"/>
    </material>
    <material name="red">
        <color rgba="1 0 0 1"/>
    </material>
    <material name="green">
        <color rgba="0 1 0 1"/>
    </material>
    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>
    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>

    <link name="base">
    <inertial>
	    <mass value="1"/>
	    <origin rpy="0 0 0" xyz="0 0 0"	/> 	<!--same as origin of link-->
	    <inertia ixx="" ixy="0" ixz="0" iyy="" iyz="0" izz="" />
    </inertial>	
    <collision>
        <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <cylinder radius="0.6" length="1"/>
            </geometry>
            <material name="black"/>
    </collision>
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <cylinder radius="0.6" length="1"/>
            </geometry>
            <material name="black"/>
        </visual>
    </link>
    
    <joint name="base__servo1" type="revolute">
        <axis xyz="0 0 1" />
        <origin rpy="0 0 0" xyz="0 0 0.5"/>
        <limit effort="1000" lower="-1.57" upper="1.57" velocity="0.5" />
        <parent link="base"/>
        <child link="servo1"/>
    </joint>
    <transmission name="trans_base_servo1">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="base_servo1">
        <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
      </joint>
      <actuator name="motor_base_servo1">
        <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
        <mechanicalReduction>1</mechanicalReduction>
      </actuator>
    </transmission>
    
    <link name="servo1">
    <inertial>
	    <mass value="0.250"/>
	    <origin rpy="0 0 0" xyz="0 0 0.1"	/> 	<!--same as origin of link-->
	    <inertia ixx="" ixy="0" ixz="0" iyy="" iyz="0" izz=""/>
    </inertial>	
        <collision>
            <origin rpy="0 0 0" xyz="0 0 0.1"/>
            <geometry>
                <box size="0.5 0.5 0.3"/>
            </geometry>
            <material name="red"/>
        </collision>
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0.1"/>
            <geometry>
                <box size="0.5 0.5 0.3"/>
            </geometry>
            <material name="red"/>
        </visual>
    </link>

        <joint name="servo1_shaft1" type="revolute">
        <axis xyz="0 1 0" />
        <limit effort="1000" lower="-1.57" upper="1.57" velocity="0.5" />
        <origin rpy="0 0 0" xyz="0 0.15 0.1"/>
        <parent link="servo1"/>
        <child link="shaft1"/>
    </joint>
    <transmission name="trans_servo1_shaft1">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="servo1_shaft1">
        <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
      </joint>
      <actuator name="motor_servo1_shaft1">
        <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
        <mechanicalReduction>1</mechanicalReduction>
      </actuator>
    </transmission>

    <link name="shaft1">
    <inertial>
	    <mass value="0.050"/>
	    <origin rpy="0 0 0" xyz="0 0 0"	/> 	<!--same as origin of link-->
	    <inertia ixx="" ixy="0" ixz="0" iyy="" iyz="0" izz=""/>
    </inertial>	
    <collision>
	<origin rpy="-1.57 0 0" xyz="0 0.1 0"/>
            <geometry>
                <cylinder radius="0.07" length="0.29"/>
            </geometry>
             <material name="blue"/>
    </collision>
        <visual>
            <origin rpy="-1.57 0 0" xyz="0 0.1 0"/>
            <geometry>
                <cylinder radius="0.07" length="0.29"/>
            </geometry>
             <material name="blue"/>
        </visual>
    </link>

    <joint name="shaft1_link1" type="fixed">
        <axis xyz="0 1 0" />
        <origin rpy="0 0 0" xyz="0 0.15 0"/>
        <parent link="shaft1"/>
        <child link="link1"/>
    </joint>
    <transmission name="trans_shaft1_link1">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="shaft1_link1">
        <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
      </joint>
      <actuator name="motor_shaft1_link1">
        <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
        <mechanicalReduction>1</mechanicalReduction>
      </actuator>
    </transmission>
    
    <link name="link1">
    <inertial>
	    <mass value="0.100"/>
	    <origin rpy="0 0 0" xyz="0 0 0"	/> 	<!--same as origin of link-->
	    <inertia ixx="" ixy="0" ixz="0" iyy="" iyz="0" izz=""/>
    </inertial>	
    <collision>
	<origin rpy="0 0 0" xyz="0 0.05 0.51"/>
            <geometry>
                <box size="0.20 0.1 1.2"/>
            </geometry>
            <material name="white"/>
    </collision>
        <visual>
            <origin rpy="0 0 0" xyz="0 0.05 0.51"/>
            <geometry>
                <box size="0.20 0.1 1.2"/>
            </geometry>
            <material name="white"/>
        </visual>
    </link>
    
  <!-- gazebo plugin -->
   <gazebo>
    <plugin name="gazebo_ros_control" filename="libgazebo_ros_control.so">
    </plugin>
   </gazebo>

</robot>